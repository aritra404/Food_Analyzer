<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.Food_Analyzer" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
        <item name="colorPrimaryVariant">@color/primary_color_light</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent_color</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_color_dark</item>

        <!-- Default text colors -->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>


        <!-- Make sure we use material components -->
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="extendedFloatingActionButtonStyle">
            @style/Widget.MaterialComponents.ExtendedFloatingActionButton
        </item>
    </style>

    <!-- Tab text style -->
    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Card style for food items -->
    <style name="FoodItemCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">0dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.Food_Analyzer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
</resources>