<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Input for Calories -->
    <EditText
        android:id="@+id/calorieInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter max calories (optional)"
        android:inputType="number"
        android:padding="12dp"

        android:layout_marginBottom="12dp" />

    <!-- Input for Ingredients -->
    <EditText
        android:id="@+id/ingredientInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter ingredients (comma-separated)"
        android:inputType="text"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Button to Find Recipes -->
    <Button
        android:id="@+id/findRecipesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Find recipes (comma-separated)"
        android:padding="12dp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <!-- RecyclerView for Recipe List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recipeRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:overScrollMode="never" />

</LinearLayout>

